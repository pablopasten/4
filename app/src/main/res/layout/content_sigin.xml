<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Messages"
    tools:showIn="@layout/activity_sigin">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imageView1" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:paddingTop="30dp"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:src="@drawable/fimilogo"
            android:contentDescription="logo" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtNombre1"
            android:layout_gravity="center_horizontal"
            android:hint="Primer Nombre"
            android:singleLine="true"
            android:nextFocusForward="@+id/edtNombre2"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtNombre2"
            android:layout_gravity="center_horizontal"
            android:hint="Segundo Nombre"
            android:singleLine="true"
            android:nextFocusForward="@+id/edtApellido1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtApellido1"
            android:layout_gravity="center_horizontal"
            android:hint="Apellido Paterno"
            android:singleLine="true"
            android:nextFocusForward="@+id/edtApellido2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtApellido2"
            android:layout_gravity="center_horizontal"
            android:hint="Apellido Materno"
            android:singleLine="true"
            android:nextFocusForward="@+id/edtTwitter" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtTwitter"
            android:layout_gravity="center_horizontal"
            android:hint="'@' en Twitter "
            android:singleLine="true"
            android:nextFocusForward="@+id/edtMail" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtMail"
            android:layout_gravity="center_horizontal"
            android:hint="Email "
            android:singleLine="true"
            android:nextFocusForward="@+id/edtPassword"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtPassword"
            android:layout_gravity="center_horizontal"
            android:hint="Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:nextFocusForward="@+id/btnUsuario"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Usuario"
            android:id="@+id/btnUsuario"
            android:layout_gravity="center" />
    </LinearLayout>


</ScrollView>


</LinearLayout>